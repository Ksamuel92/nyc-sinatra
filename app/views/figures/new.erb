<h2>Create New Figure</h2>
<form method="post" action="/figures">
<label for="name">Name:</label>
<input type="text" name="figure[name]" value="" id="figure_name">

<h2> Titles </h2>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"><%= title.name %><br>
  <% end %>
  <br>
  <br>
    <label> Create New Title:</label>
      <input id="new_title" type="text" name="title[name]"></input>
    <br> 

    <h2> Landmarks </h2>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><%= landmark.name %><br>
  <% end %>
  <br>

  <br>
    <label>Create New Landmark:</label>
    <label> Name:</label>
      <input id="new_landmark" type="text" name="landmark[name]"></input>
    <br> 
    <label>Year:</label>
    <input type="text" name="landmark[year_completed]">
    <input type="submit" value="Create New Figure">


<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
