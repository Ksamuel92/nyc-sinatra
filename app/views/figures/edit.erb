<h2>Edit Historical Figures</h2>

<!-- add content here -->
<form method="post" action= "/figures/<%= @figure.id%>">
<input id="hidden" type="hidden" name="_method" value="patch">

<label>Edit the Figure's Name:</label>
    <br>
    <input id="figure_name" type="text" name="figure[name]" value="<%= @figure.name %>">
    <input type="Submit" value="Save Changes">

<h2> Titles </h2>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"<%='checked' if @figure.titles.include?(title)%>><%= title.name %><br>
  <% end %>
  <br>
  <br>
    <label> Create New Title:</label>
      <input id="new_title" type="text" name="title[name]"></input>
    <br> 

     <h2> Landmarks </h2>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark)%>><%= landmark.name %><br>
  <% end %>
  <br>

  <br>
    <label>Create New Landmark:</label>
    <label> Name:</label>
      <input id="new_landmark" type="text" name="landmark[name]"></input>
    <br> 
    <label>Year:</label>
    <input type="text" name="landmark[year_completed]">
    <input type="submit" id="edit_figure" value="Edit Figure">

</form>

<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
